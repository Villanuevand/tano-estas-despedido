{
  "manifest_version": 2,
  "name": "¡Tano estás Despedido!",
  "version": "1.0",
  "version_name": "1.0",
  "description": "Una pequeña extensión de Chrome que recuerda al Jefe despedir al Tano...",
  "author": "Andrés Villanueva",
  "icons":{
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_locale": "es",
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    },
    "default_title": "¡Tano estás Despedido!"
  },
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistence": false
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ]

}